<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SweetShopMa.Views.LoginPage"
             Title="Login"
             BackgroundColor="#f5f5f5">

    <VerticalStackLayout 
        Padding="20" 
        Spacing="20" 
        VerticalOptions="Center"
        HorizontalOptions="Center"
        MaximumWidthRequest="400">

        <!-- Header -->
        <Label 
            Text="ðŸ¬ Sweet Shop" 
            FontSize="32" 
            FontAttributes="Bold" 
            TextColor="#32b8c6"
            HorizontalTextAlignment="Center"/>
        <Label 
            Text="ðŸ” Secure Login" 
            FontSize="18" 
            TextColor="#666"
            HorizontalTextAlignment="Center"/>

        <!-- Username Field -->
        <StackLayout Spacing="8">
            <Label Text="ðŸ‘¤ Username" FontSize="14" FontAttributes="Bold" TextColor="#333"/>
            <Entry 
                x:Name="UsernameEntry"
                Placeholder="Enter username"
                BackgroundColor="White"
                FontSize="14"/>
        </StackLayout>

        <!-- Password Field with Lock Icon -->
        <StackLayout Spacing="8">
            <Label Text="ðŸ”’ Password" FontSize="14" FontAttributes="Bold" TextColor="#333"/>
            <HorizontalStackLayout Spacing="0">
                <Entry 
                    x:Name="PasswordEntry"
                    IsPassword="True"
                    Placeholder="Enter password"
                    BackgroundColor="White"
                    FontSize="14"
                    HorizontalOptions="FillAndExpand"/>
                <Label 
                    Text="ðŸ”" 
                    FontSize="16" 
                    VerticalOptions="Center"
                    Margin="0,0,12,0"
                    TextColor="#32b8c6"/>
            </HorizontalStackLayout>
        </StackLayout>

        <!-- Error Message -->
        <Label 
            x:Name="ErrorLabel"
            TextColor="#c00000"
            FontSize="12"
            Padding="10"
            BackgroundColor="#ffe6e6"
            HorizontalTextAlignment="Center"
            IsVisible="False"/>

        <!-- Login Button -->
        <Button 
            x:Name="LoginButton"
            Text="ðŸ”“ Login"
            BackgroundColor="#32b8c6"
            TextColor="White"
            Padding="12"
            CornerRadius="8"
            FontSize="16"
            FontAttributes="Bold"
            Clicked="OnLoginClicked"/>

        <!-- Loading Indicator -->
        <ActivityIndicator 
            x:Name="LoadingIndicator"
            IsRunning="False"
            IsVisible="False"
            Color="#32b8c6"
            Scale="1.5"/>

        <!-- Demo Credentials Info -->
        <Label 
            Text="Demo Credentials:&#10;admin / admin123&#10;customer / customer123"
            FontSize="11"
            TextColor="#999"
            HorizontalTextAlignment="Center"
            Margin="0,20,0,0"/>

    </VerticalStackLayout>

</ContentPage>
