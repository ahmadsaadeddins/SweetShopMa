<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SweetShopMa.Views.AdminPage"
             Title="Admin Panel">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <!-- Navigation + Language Selector -->
            <Grid ColumnDefinitions="Auto,*" Margin="0,0,0,10">
                <Button x:Name="AdminBackButton"
                        Text="Back"
                        BackgroundColor="#f0f4f7"
                        TextColor="#1d7480"
                        Padding="10,6"
                        CornerRadius="6"
                        Clicked="OnBackButtonClicked"
                        HorizontalOptions="Start"/>
                <HorizontalStackLayout Grid.Column="1" HorizontalOptions="End" Spacing="5">
                    <Button Text="EN" 
                            BackgroundColor="#1d7480"
                            TextColor="White"
                            Padding="8,5"
                            CornerRadius="4"
                            FontSize="10"
                            Clicked="OnLanguageButtonClicked"/>
                    <Button Text="AR" 
                            BackgroundColor="#1d7480"
                            TextColor="White"
                            Padding="8,5"
                            CornerRadius="4"
                            FontSize="10"
                            Clicked="OnLanguageButtonClicked"/>
                </HorizontalStackLayout>
            </Grid>

            <Label x:Name="AdminPanelTitleLabel" Text="Administrator Panel"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <!-- Navigation Buttons -->
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="15" RowSpacing="15" Margin="0,20,0,20">
                <!-- Users Management Button -->
                <Border Grid.Row="0" Grid.Column="0" 
                        Stroke="#1d7480" 
                        StrokeThickness="2" 
                        Padding="20" 
                        BackgroundColor="#f0f9fa"
                        IsVisible="{Binding CanManageUsers}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnUsersPageTapped"/>
                    </Border.GestureRecognizers>
                    <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Label Text="ðŸ‘¤" FontSize="48" HorizontalOptions="Center"/>
                        <Label x:Name="UsersButtonLabel" Text="User Management" 
                               FontSize="18" 
                               FontAttributes="Bold" 
                               TextColor="#1d7480"
                               HorizontalOptions="Center"/>
                        <Label Text="Manage users, roles, and permissions" 
                               FontSize="12" 
                               TextColor="#666"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Products Management Button -->
                <Border Grid.Row="0" Grid.Column="1" 
                        Stroke="#32b8c6" 
                        StrokeThickness="2" 
                        Padding="20" 
                        BackgroundColor="#f0f9fa"
                        IsVisible="{Binding CanManageStock}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnProductsPageTapped"/>
                    </Border.GestureRecognizers>
                    <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Label Text="ðŸ“¦" FontSize="48" HorizontalOptions="Center"/>
                        <Label x:Name="ProductsButtonLabel" Text="Product Management" 
                               FontSize="18" 
                               FontAttributes="Bold" 
                               TextColor="#32b8c6"
                               HorizontalOptions="Center"/>
                        <Label Text="Add, edit, and manage products" 
                               FontSize="12" 
                               TextColor="#666"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Attendance Tracker Button -->
                <Border Grid.Row="1" Grid.Column="0" 
                        Stroke="#4CAF50" 
                        StrokeThickness="2" 
                        Padding="20" 
                        BackgroundColor="#f0f9fa"
                        IsVisible="{Binding CanUseAttendanceTracker}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAttendanceTrackerTapped"/>
                    </Border.GestureRecognizers>
                    <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Label Text="â°" FontSize="48" HorizontalOptions="Center"/>
                        <Label x:Name="AttendanceButtonLabel" Text="Attendance Tracker" 
                               FontSize="18" 
                               FontAttributes="Bold" 
                               TextColor="#4CAF50"
                               HorizontalOptions="Center"/>
                        <Label Text="Track employee attendance and hours" 
                               FontSize="12" 
                               TextColor="#666"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Restock Report Button -->
                <Border Grid.Row="1" Grid.Column="1" 
                        Stroke="#ff9800" 
                        StrokeThickness="2" 
                        Padding="20" 
                        BackgroundColor="#f0f9fa"
                        IsVisible="{Binding CanManageStock}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnRestockReportTapped"/>
                    </Border.GestureRecognizers>
                    <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Label Text="ðŸ“Š" FontSize="48" HorizontalOptions="Center"/>
                        <Label x:Name="RestockReportButtonLabel" Text="Restock Report" 
                               FontSize="18" 
                               FontAttributes="Bold" 
                               TextColor="#ff9800"
                               HorizontalOptions="Center"/>
                        <Label Text="View inventory restock history" 
                               FontSize="12" 
                               TextColor="#666"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                </Border>
            </Grid>

            <Label x:Name="ReportsLabel" Text="Reports &amp; Insights" FontSize="16" FontAttributes="Bold"/>
            <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,Auto" ColumnSpacing="10" RowSpacing="10">
                <Border Grid.Row="0" Grid.Column="0" Stroke="#e0e0e0" StrokeThickness="1" Padding="12" BackgroundColor="White">
                    <VerticalStackLayout Spacing="2">
                        <Label x:Name="TotalSalesLabel" Text="Total Sales" FontSize="12" TextColor="#666"/>
                        <Label Text="{Binding TotalSales, StringFormat='${0:F2}'}" FontSize="20" FontAttributes="Bold"/>
                    </VerticalStackLayout>
                </Border>
                <Border Grid.Row="0" Grid.Column="1" Stroke="#e0e0e0" StrokeThickness="1" Padding="12" BackgroundColor="White">
                    <VerticalStackLayout Spacing="2">
                        <Label x:Name="OrdersLabel" Text="Orders" FontSize="12" TextColor="#666"/>
                        <Label Text="{Binding TotalOrders}" FontSize="20" FontAttributes="Bold"/>
                        <Label x:Name="AverageOrderValueLabel" Text="{Binding AverageOrderValueDisplay}" FontSize="12" TextColor="#666"/>
                    </VerticalStackLayout>
                </Border>
                <Border Grid.Row="0" Grid.Column="2" Stroke="#e0e0e0" StrokeThickness="1" Padding="12" BackgroundColor="White">
                    <VerticalStackLayout Spacing="2">
                        <Label x:Name="ItemsSoldLabel" Text="Items Sold" FontSize="12" TextColor="#666"/>
                        <Label Text="{Binding TotalItemsSold, StringFormat='{0:F2}'}" FontSize="20" FontAttributes="Bold"/>
                    </VerticalStackLayout>
                </Border>
                <Border Grid.Row="1" Grid.Column="0" Stroke="#e0e0e0" StrokeThickness="1" Padding="12" BackgroundColor="White">
                    <VerticalStackLayout Spacing="2">
                        <Label x:Name="Last7DaysLabel" Text="Last 7 Days" FontSize="12" TextColor="#666"/>
                        <Label Text="{Binding Last7DaysSales, StringFormat='${0:F2}'}" FontSize="20" FontAttributes="Bold"/>
                    </VerticalStackLayout>
                </Border>
                <Border Grid.Row="1" Grid.Column="1" Stroke="#e0e0e0" StrokeThickness="1" Padding="12" BackgroundColor="White">
                    <VerticalStackLayout Spacing="2">
                        <Label x:Name="TopProductLabel" Text="Top Product" FontSize="12" TextColor="#666"/>
                        <Label Text="{Binding TopProductName}" FontSize="16" FontAttributes="Bold"/>
                        <Label Text="{Binding TopProductDetails}" FontSize="12" TextColor="#666"/>
                    </VerticalStackLayout>
                </Border>
                <Border Grid.Row="1" Grid.Column="2" Stroke="#e0e0e0" StrokeThickness="1" Padding="12" BackgroundColor="White">
                    <VerticalStackLayout Spacing="2">
                        <Label x:Name="ReportStatusLabel" Text="Report Status" FontSize="12" TextColor="#666"/>
                        <Label x:Name="ReportStatusValueLabel" 
                               FontSize="16" 
                               FontAttributes="Bold" 
                               Text="{Binding ReportStatusText}"
                               TextColor="{Binding ReportStatusTextColor}"/>
                    </VerticalStackLayout>
                </Border>
            </Grid>

            <Label x:Name="TopProductsLabel" Text="Top Products" FontSize="16" FontAttributes="Bold"/>
            <CollectionView ItemsSource="{Binding TopProducts}" HeightRequest="200">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="Auto,*,Auto" Padding="8" ColumnSpacing="10">
                            <Label Grid.Column="0" Text="{Binding Emoji}" FontSize="24" VerticalOptions="Center"/>
                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                <Label Text="{Binding Name}" FontAttributes="Bold"/>
                                <Label Text="{Binding QuantityDisplay}" FontSize="12" TextColor="#555"/>
                            </VerticalStackLayout>
                            <Label Grid.Column="2"
                                   Text="{Binding TotalSalesDisplay}"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   HorizontalOptions="End"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label x:Name="RecentOrdersLabel" Text="Recent Orders" FontSize="16" FontAttributes="Bold"/>
            <CollectionView ItemsSource="{Binding RecentOrders}" HeightRequest="220" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="Auto,*,Auto" Padding="8" ColumnSpacing="10">
                            <Label Grid.Column="0"
                                   Text="{Binding Id, StringFormat='# {0}'}"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"/>
                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                <Label Text="{Binding OrderDate, StringFormat='{0:MMM dd, HH:mm}'}" FontAttributes="Bold"/>
                                <Label Text="{Binding UserName, StringFormat='Cashier: {0}'}" FontSize="12" TextColor="#555"/>
                                <Label Text="{Binding ItemCount, StringFormat='Items: {0}'}" FontSize="12" TextColor="#777"/>
                            </VerticalStackLayout>
                            <Label Grid.Column="2"
                                   Text="{Binding Total, StringFormat='${0:F2}'}"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   HorizontalOptions="End"/>
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.OpenOrderDetailsCommand}"
                                    CommandParameter="{Binding .}"/>
                            </Grid.GestureRecognizers>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>


            <Label Text="{Binding StatusMessage}"
                   FontAttributes="Bold"
                   IsVisible="{Binding HasStatusMessage}"
                   HorizontalOptions="Center">
                <Label.Triggers>
                    <DataTrigger TargetType="Label" Binding="{Binding IsErrorStatus}" Value="True">
                        <Setter Property="TextColor" Value="#c00000"/>
                    </DataTrigger>
                    <DataTrigger TargetType="Label" Binding="{Binding IsErrorStatus}" Value="False">
                        <Setter Property="TextColor" Value="#1f7a4d"/>
                    </DataTrigger>
                </Label.Triggers>
            </Label>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

