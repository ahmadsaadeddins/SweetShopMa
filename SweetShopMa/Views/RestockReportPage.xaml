<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SweetShopMa.Views.RestockReportPage"
             Title="Restock Report"
             BackgroundColor="#f5f5f5">

    <Grid RowDefinitions="Auto,*" Padding="20">
        <!-- Header -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,15">
            <Button x:Name="BackButton"
                    Text="Back"
                    BackgroundColor="#f0f4f7"
                    TextColor="#1d7480"
                    Padding="10,6"
                    CornerRadius="6"
                    Clicked="OnBackButtonClicked"
                    HorizontalOptions="Start"/>
            <Label x:Name="TitleLabel"
                   Grid.Column="1"
                   Text="ðŸ“¦ Restock Report"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#32b8c6"
                   HorizontalTextAlignment="Center"
                   VerticalOptions="Center"/>
            <HorizontalStackLayout Grid.Column="2" HorizontalOptions="End" Spacing="5">
                <Button Text="EN" 
                        BackgroundColor="#1d7480"
                        TextColor="White"
                        Padding="8,5"
                        CornerRadius="4"
                        FontSize="10"
                        Clicked="OnLanguageButtonClicked"/>
                <Button Text="AR" 
                        BackgroundColor="#1d7480"
                        TextColor="White"
                        Padding="8,5"
                        CornerRadius="4"
                        FontSize="10"
                        Clicked="OnLanguageButtonClicked"/>
            </HorizontalStackLayout>
        </Grid>

        <!-- Restock Records List -->
        <CollectionView Grid.Row="1" 
                        ItemsSource="{Binding RestockRecords}"
                        BackgroundColor="White"
                        Margin="0,10,0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Stroke="#e0e0e0" 
                            StrokeThickness="1" 
                            Padding="15" 
                            Margin="0,0,0,10"
                            BackgroundColor="White">
                        <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="5">
                            <!-- Product Emoji and Name -->
                            <Label Grid.Row="0" Grid.Column="0" 
                                   Text="{Binding ProductEmoji}" 
                                   FontSize="32" 
                                   VerticalOptions="Center"/>
                            <StackLayout Grid.Row="0" Grid.Column="1" Spacing="2">
                                <Label Text="{Binding ProductName}" 
                                       FontSize="16" 
                                       FontAttributes="Bold" 
                                       TextColor="#333"/>
                                <Label Text="{Binding QuantityDisplay}" 
                                       FontSize="12" 
                                       TextColor="#666"/>
                            </StackLayout>
                            <Label Grid.Row="0" Grid.Column="2" 
                                   Text="{Binding RestockDate, StringFormat='{0:yyyy-MM-dd HH:mm}'}" 
                                   FontSize="11" 
                                   TextColor="#999" 
                                   VerticalOptions="Start"
                                   HorizontalOptions="End"/>

                            <!-- Stock Before/After -->
                            <StackLayout Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Spacing="15">
                                <Label Text="{Binding StockBeforeDisplay}" 
                                       FontSize="12" 
                                       TextColor="#666"/>
                                <Label Text="â†’" FontSize="12" TextColor="#999" VerticalOptions="Center"/>
                                <Label Text="{Binding StockAfterDisplay}" 
                                       FontSize="12" 
                                       TextColor="#1f7a4d" 
                                       FontAttributes="Bold"/>
                            </StackLayout>

                            <!-- User Info -->
                            <Label Text="{Binding RestockedByDisplay}"
                                   Grid.Row="2" Grid.Column="1" 
                                   FontSize="11" 
                                   TextColor="#999"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.EmptyView>
                <StackLayout Padding="40" HorizontalOptions="Center" VerticalOptions="Center">
                    <Label x:Name="EmptyViewLabel"
                           Text="No restock records found" 
                           FontSize="16" 
                           TextColor="#999" 
                           HorizontalTextAlignment="Center"/>
                </StackLayout>
            </CollectionView.EmptyView>
        </CollectionView>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="1"
                          IsRunning="{Binding IsBusy}"
                          IsVisible="{Binding IsBusy}"
                          Color="#32b8c6"
                          Scale="1.5"
                          VerticalOptions="Center"
                          HorizontalOptions="Center"/>
    </Grid>
</ContentPage>

